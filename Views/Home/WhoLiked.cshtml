<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css" />
    <title>Dojo Secret</title>
    @using DojoSecret.Models
    @model DashboardModel
    @using System.Linq
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <span class="navbar-brand">DojoSecrets</span>
        <h3>Most Popular Secrets!</h3>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class='nav-link' href="/logout">Logout</a>
            </li>
            <li class ="nav-item">
                <a class="nav-link" href="/HomePage">HomePage</a>
            </li>
        </ul>
    </nav><br>
    <h3>Welcome, @ViewBag.User.Name @ViewBag.User.Alias!</h3>
    <br>
    <h3>@Model.secrets.Creator.Name</h3>
    <h5>Says:</h5>
    <p>@Model.secrets.Content</p>
    <h3>People who liked this Idea</h3>
    <table>
        <tr>
            <th>Alias</th>
            <th>Name</th>
        </tr>
        @foreach (var i in @Model.NinjaList)
        {
            <tr>
                <td><a href="/HomePage/@i.Id">@i.Alias</a> &nbsp;</td> 
                <td>@i.Name</td>
            </tr>
        }
    </table>
</body>
</html>
